    <script type="text/javascript">

        //点击空白隐藏
        $(function () {
            $(document).click(function (e) {
                if (e.target.className == "yxj_eng") {
                    return false;
                } else {
                    $(".select_option").hide();
                }
            });

        })


        //------------下拉框键盘上下移动效果-----------------

        $(document).keydown(function (e) {
            var len = $(".yxj_tc li").length;
            if (event.keyCode == 40) {
                var li = $(".yxj_tc .on");
                var num = li.index();
                if (num == -1) {
                    $(".yxj_tc li").first().addClass("on");
                    $(".yxj_text").val($(".yxj_tc li").first().text());
                }
                if (num == len - 1) {
                    return false;
                }
                else {
                    li.removeClass("on");
                    li.next().addClass("on");
                    var text = $(".yxj_tc .on a").text();
                    $(".yxj_text").val(text);
                }
            }
            if (event.keyCode == 38) {
                var li = $(".yxj_tc .on");
                var num = li.index();
                if (num < 1) {
                    return false;
                }
                else {
                    li.removeClass("on");
                    li.prev().addClass("on");
                    var text = $(".yxj_tc .on a").text();
                    $(".yxj_text").val(text);
                }
            }
        });
    </script>

