<div class="mini-xs mini-sm mini-md mini-md-active">
    <div class="container-fluid ">
        <div class="mini-clearfix">
            <div class="mini-col-3">
                <div class="mini-panel layout-panel frame-fit" showHeader="false" width="auto" showCollapseButton="flase" showCloseButton="flase">
                    <ul id="treeData" class="mini-tree" style="height:100%" url="@Url.Action("GetAllTreeData")"
                        showtreeicon="true"
                        textfield="ServiceName"
                        idfield="ServiceID"
                        parentfield="ParentID"
                        onnodeselect="nodeselect"
                        expandOnLoad="true"
                        resultastree="false"></ul>
                </div>
            </div>
            <div class="mini-col-9">
                <div class="mini-panel layout-panel frame-fit" id="formData" showHeader="false" width="auto" showCollapseButton="flase" showCloseButton="flase">
                        <table border="0" cellpadding="1" cellspacing="2" style="width: 428px; table-layout: fixed;">
                            <tr>
                                <td class="col-md-10">
                                    <input id="CreatedDate" name="CreatedDate" class="mini-hidden" value="@Model.CreatedDate" />
                                    <input id="CreatedBy" name="CreatedBy" class="mini-hidden" value="@Model.CreatedBy" />
                                    <input id="ServiceID" name="ServiceID" class="mini-hidden" value="@Model.ServiceID" />

                                    <input labelfield="true" label="@FStr.ServiceInfoName：" name="ServiceName" value="@Model.ServiceName" required="true" class="mini-textbox" maxlength="50" style="width:600px;" />
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-10">
                                    <input labelfield="true" label="@FStr.ServiceMethodName：" name="ServiceFunctionName" value="@Model.ServiceFunctionName" class="mini-textbox" maxlength="255" style="width:600px;" />
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-10">
                                    <input labelfield="true" label="@FStr.ServiceMethodFullName：" name="ServiceFullName" value="@Model.ServiceFullName" class="mini-textbox" maxlength="255" style="width:600px;" />
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-10">
                                    <input id="lookTree" name="ParentID" class="mini-treeselect" style="width:600px;"
                                           url="@Url.Action("GetTreeData")"
                                           labelField="true"
                                           label="@FStr.ParentNodeName："
                                           multiselect="false"
                                           valuefromselect="false"
                                           allowinput="false"
                                           showfoldercheckbox="false"
                                           showradiobutton="false"
                                           expandonload="0"
                                           popupwidth="600"
                                           showclose="true"
                                           oncloseclick="javascript:this.setText('');this.setValue('');"
                                           textfield="ServiceName"
                                           valuefield="ServiceID"
                                           parentfield="ParentID"
                                           value="@Model.ParentID" />

                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-10">
                                    <input labelfield="true" label="@FStr.AuthorizeType：" name="AuthWay" id="AuthWay" class="mini-combobox" required="true" value="@Model.AuthWay" />
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-10">
                                    <input labelfield="true" label="@FStr.ServiceStatus:" name="IsvalId" class="mini-radiobuttonlist" value="@Model.IsvalId" data="[{id: 1, text: '启用'}, {id: 0, text: '禁用'}]" style="width:400px;" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" class="col-md-10">
                                    <input labelfield="true" label="@JStr.Remark：" value="@Model.Memo" name="Memo" maxlength="1000" style="width:600px;height:100px" class="mini-textarea" />
                                </td>
                            </tr>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>